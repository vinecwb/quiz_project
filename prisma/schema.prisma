generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Subject {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  questions Question[]

  @@map("subjects")
}

model Question {
  id        Int      @id @default(autoincrement())
  subjectId Int
  question  String
  options   String[]
  answer    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  subject Subject @relation(fields: [subjectId], references: [id])

  @@map("questions")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  lastname  String
  email     String   @unique
  password  String
  isTeacher Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("user_logins")
}
